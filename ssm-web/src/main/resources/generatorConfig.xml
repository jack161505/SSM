<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
<properties resource="jdbc.properties"/>
    <classPathEntry location="E:\MavenWarehouse\mysql\mysql-connector-java\8.0.11\mysql-connector-java-8.0.11.jar" />

    <context id="testTables" targetRuntime="MyBatis3">

        <commentGenerator>
            <!-- 去除自动生成的注释 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <!-- 数据库连接配置 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL='jdbc:mysql://192.168.152.128:3306/ssm_shiro?useUnicode=true&amp;characterEncoding=utf-8&amp;useSSL=false&amp;serverTimezone = GMT'
                        userId="root"
                        password="161505"/>

        <!-- 非必需，类型处理器，在数据库类型和java类型之间的转换控制-->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>


        <!--配置生成的实体包
                targetPackage：生成的实体包位置，默认存放在src目录下
                targetProject：目标工程名
             -->
        <javaModelGenerator targetPackage="com.jack.ssmmodules.pojo"
                            targetProject="E:\Java\Idea\SSM\ssm-modules\ssm-pojo\src\main\java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
            <!-- 从数据库返回的值被清理前后的空格 -->
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- 实体包对应映射文件位置及名称，默认存放在classpath目录下 -->
        <!--绝对路径：F:/IDEAworkspace/module/module-manager/module-manager-dao/src/main/resources-->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="E:\Java\Idea\SSM\ssm-modules\ssm-web\src\main\resources">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
        </sqlMapGenerator>

        <!-- targetPackage：mapper接口生成的位置 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.jack.ssmmodules.dao"
                             targetProject="E:\Java\Idea\SSM\ssm-modules\ssm-dao\src\main\java">
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
            <!-- enableSubPackages:是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
        </javaClientGenerator>

        <!-- 配置表
                   schema：不用填写
                   tableName: 表名
                   enableCountByExample、enableSelectByExample、enableDeleteByExample、enableUpdateByExample、selectByExampleQueryId：
                   去除自动生成的例子
               -->
<!--        <table schema="" tableName="user" enableCountByExample="true" enableSelectByExample="true"-->
<!--               enableDeleteByExample="true" enableUpdateByExample="true" selectByExampleQueryId="true" >-->
<!--        </table>-->

        <table schema="" tableName="sec_user" domainObjectName="SecUser"/>
        <table schema="" tableName="sec_role" domainObjectName="SecRole"/>
        <table schema="" tableName="sec_permission" domainObjectName="SecPermission"/>
        <table schema="" tableName="sec_user_role" domainObjectName="SecUserRole"/>
        <table schema="" tableName="sec_role_permission" domainObjectName="SecRolePermission"/>
    </context>
</generatorConfiguration>